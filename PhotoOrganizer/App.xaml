<Application
    x:Class="PhotoOrganizer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:text="using:PhotoOrganizer.Text"
    xmlns:reactive="using:System.Reactive">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/MainTheme/Bundle.xaml"/>
                <ResourceDictionary Source="Converters/ConvertersBundle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <text:StringsReader x:Key="Strings"/>

        </ResourceDictionary>
    </Application.Resources>

</Application>