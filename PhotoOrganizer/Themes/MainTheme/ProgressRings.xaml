<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Brushes.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="BaseProgressRingStyle" TargetType="ProgressRing">
        <Setter Property="Foreground" Value="{StaticResource FullAccentBrush}"/>
    </Style>

    <Style x:Key="SmallProgressRingStyle" TargetType="ProgressRing" BasedOn="{StaticResource BaseProgressRingStyle}">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="30"/>
    </Style>

    <Style x:Key="MediumProgressRingStyle" TargetType="ProgressRing" BasedOn="{StaticResource BaseProgressRingStyle}">
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="50"/>
    </Style>

    <Style x:Key="LargeProgressRingStyle" TargetType="ProgressRing" BasedOn="{StaticResource BaseProgressRingStyle}">
        <Setter Property="Height" Value="75"/>
        <Setter Property="Width" Value="75"/>
    </Style>

    <Style x:Key="HugeProgressRingStyle" TargetType="ProgressRing" BasedOn="{StaticResource BaseProgressRingStyle}">
        <Setter Property="Height" Value="100"/>
        <Setter Property="Width" Value="100"/>
    </Style>

</ResourceDictionary>